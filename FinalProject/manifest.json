{
    "manifest_version": 3,
    "name": "CalScan",
    "description": "Track calories from a recipe page.",
    "version": "1.0.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": { 
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
    
}